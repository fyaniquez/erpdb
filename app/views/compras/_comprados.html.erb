<p id="notice"><%= notice %></p>

<h1>Detalle Items Comprados</h1>
<%= link_to 'New producto comprado', new_comprado_path %>

<table>
  <thead>
    <tr>
      <th>Producto</th>
      <th>Precio</th>
      <th>Cantidad</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% total = 0.0 %>
    <% @compra.detalles.each do |comprado| %>
      <tr>
      <td><%= comprado.producto.nombre %></td>
      <td><%= comprado.precio %></td>
      <td><%= comprado.cantidad %></td>
      <td><%= comprado.total %></td>
        <td><%= link_to 'Show', comprado %></td>
        <td><%= link_to 'Edit', edit_comprado_path(comprado) %></td>
        <td><%= link_to 'Destroy', comprado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% total += comprado.total; end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">TOTAL</td>
      <td><%= total %></td>
    </tr>
  </tfoot>
</table>

<br>

