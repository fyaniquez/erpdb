<p id="notice"><%= notice %></p>

<h1>Compras</h1>
<%= link_to 'New Compra', new_compra_path %>

<table>
  <thead>
    <tr>
      <th>Almacen</th>
      <th>Fecha</th>
      <th>Objeto</th>
      <th>Glosa</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
      <td><%= compra.almacen.nombre %></td>
      <td><%= compra.fecha %></td>
      <td><%= compra.objeto %></td>
      <td><%= compra.glosa %></td>
      <td><%= compra.estado %></td>
        <td><%= link_to 'Show', compra %></td>
        <td><%= link_to 'Edit', edit_compra_path(compra) %></td>
        <td><%= link_to 'Destroy', compra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

