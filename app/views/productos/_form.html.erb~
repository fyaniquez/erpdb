<%= form_with(model: producto, local: true) do |form| %>
  <% if producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

      <ul>
        <% producto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
  <div class="field">
    <%= form.label :marca_id %>
    <%= form.collection_select :marca_id, Marca.all, :id, :nombre %>
  </div>
  
  <div class="field">
    <%= form.label :categoria_id %>
    <%= form.collection_select :categoria_id, Categoria.all, :id, :nombre %>    
  </div>
  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>
  <div class="field">
    <%= form.label :unidad %>
    <%= form.select :unidad, options_for_select([["Bs.", "Bs."], ["u", "u"]]) %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
