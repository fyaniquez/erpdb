<%= form_with(model: @factura, local: true) do |form| %>
  <div class="actions text-right">
    <%= form.submit class: "btn btn-primary" %>
  </div>
  <% if @factura.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@factura.errors.count, "error") %> evitan que esta factura sea guardada</h2>
      <ul>
        <% @factura.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
  <div class="form-group row">
    <%= form.label :objeto, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :objeto, class: "form-control form-control-sm" %>
    </div>    
  </div>
  <% end %>
  <%= form_with(model: @vendido, local: true) do |f| %>
      <div class="container">
  <div class="row no-gutter">
      <div class="col-5">
	<%= f.label :producto_id %></div>
      <div class="col">
	<%= f.label :precio%></div>
      <div class="col">
	<%= f.label :cantidad %></div>
      <div class="col">
	<%= f.label :total %></div>
    </div>

      <div class="row no-gutter">
	<div class="col-5">
	  <%= f.select :producto_id, options_for_select(@productos, @vendido.producto_id), class: "form-control" %></div>
	<div class="col">
	  <%= f.text_field :precio, class: "form-control" %></div>
	<div class="col">
	  <%= f.text_field :cantidad, class: "form-control" %></div>
	<div class="col">
	  <%= f.text_field :total, class: "form-control" %></div>
      </div>
    </div>    
  <div class="text-center">
    <%= f.submit class: "btn btn-secondary"%>
  </div>
<% end %>
  <div class="panel-body" id="vendidos">
    <%= (@factura.detalles.count > 0) ? render(partial: 'vendidos', locals: {venta: @venta, show_actions: true }) : 'No hay detalles cargados' %>
  </div>
 <%= link_to "Nuevo detalle", new_vendido_path(transaccion_id: @factura.id), remote: true, class: "btn btn-info" %>
